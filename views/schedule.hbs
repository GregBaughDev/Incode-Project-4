<div class="container w-75 center-div">
    <div class="container w-20 border p-5">
    <h2 class="text-center my-2">Delete Schedule</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col" class="text-center">Day</th>
                    <th scope="col" class="text-center">Start Time</th>
                    <th scope="col" class="text-center">End Time</th>
                </tr>
            </thead>
            <tbody>
                    <tr>
                        <td scope="col" class="text-center align-middle">{{schedule.day}}</td>
                        <td scope="col" class="text-center align-middle">{{schedule.start_time}}</td>
                        <td scope="col" class="text-center align-middle">{{schedule.end_time}}</td>
                        </td>
                    </tr>
            </tbody>
        </table>
        <div class="d-flex justify-content-center">
            <form method="POST" action="/schedules/{{schedule.schedule_id}}?_method=DELETE">
                <button type="submit" name="_method" class="btn btn-style" >
                CONFIRM   
                </button>
            </form>
      </div>
    </div>
</div>
