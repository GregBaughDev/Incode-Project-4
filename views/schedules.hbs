<div class="container w-75 center-div">
    <div class="container w-20 border p-5">
    <h2 class="text-center my-2">Current Schedules</h2>
        <table class="table">
        {{#if error}}
        <div class="alert alert-danger my-5" role="alert">
            {{error}}
        </div>
        {{/if}}
            <thead>
                <tr>
                    <th scope="col" class="text-center">
                        Day
                    <a href="/schedules/day">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h9m5-4v12m0 0l-4-4m4 4l4-4" />
                        </svg>
                    </a>
                    </th>
                    <th scope="col" class="text-center">Start Time</th>
                    <th scope="col" class="text-center">End Time</th>
                    <th scope="col" class="text-center">Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each schedule}}
                    <tr>
                        <td scope="col" class="text-center align-middle">{{this.day}}</td>
                        <td scope="col" class="text-center align-middle">{{this.start_time}}</td>
                        <td scope="col" class="text-center align-middle">{{this.end_time}}</td>
                        <td scope="col" class="text-center align-middle"><a href="/schedules/{{this.schedule_id}}" class="btn btn-style" role="button">DELETE<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg></a></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        {{#if empty}}
            <h3 class="text-center my-4">No Schedules Yet</h2>
        {{/if}}
        <div class="d-flex justify-content-center">
        <button class="btn btn-style" id="newSchedule" onclick="newSched.style.visibility='visible'; newSchedule.style.visibility='hidden';">
            Add Schedule
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
        </button>
      </div>
      <div id="newSched">      
    <h3 class="text-center my-4">Add New Schedule</h3>
    <form action="/schedules" method="POST">
        <div class="form-group my-3">
            <label for="day">Choose a day:</label>
            <select class="form-control" name="day" id="day" required> 
            <option value=1>Monday</option>
            <option value=2>Tuesday</option>
            <option value=3>Wednesday</option>
            <option value=4>Thursday</option>
            <option value=5>Friday</option>
            <option value=6>Saturday</option>
            <option value=7>Sunday</option>
            </select>
        </div>

        <div class="form-group my-3">
        <label for="start_time">Shift starts at:</label>
        <input class="form-control" type="time" name="start_time" id="start_time" min="06:00" max="19:00" required>
        <label for="end_time">Shift ends at:</label>
        <input class="form-control" type="time" name="end_time" id="end_time"  min="06:00" max="19:00"  required>
        <small>Working hours are 6am to 7pm (06:00 - 19:00)</small>
        </div>

        <div class="form-group my-3 d-flex justify-content-center">
            <button class="btn btn-style" type="submit">
                Add Schedule
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            </button>
        </div>
    </form>
</div>
    </div>
</div>
