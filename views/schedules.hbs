<div class="container w-75 center-div">
    <div class="container w-20 border p-5">
        <h2 class="text-center my-2">Schedules</h2>
        <h3 class="text-center my-4">New Schedule</h3>
        <form action="/schedules" method="POST">
            <div class="form-group my-3">
                <label for="day">Choose a day (Week starts on Monday!):</label>
                <select class="form-control" name="day" id="day" required> 
                  <option value=1>Monday</option>
                  <option value=2>Tuesday</option>
                  <option value=3>Wednesday</option>
                  <option value=4>Thursday</option>
                  <option value=5>Friday</option>
                  <option value=6>Saturday</option>
                  <option value=7>Sunday</option>
                </select>
            </div>

            <div class="form-group my-3">
              <label for="start_time">Start at:</label>
              <input class="form-control" type="time" name="start_time" id="start_time" required>
              <label for="end_time">End at:</label>
              <input class="form-control" type="time" name="end_time" id="end_time" required>
            </div>

            <div class="form-group my-3 d-flex justify-content-center">
                <button class="btn btn-style" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

<div class="container w-75 center-div">
    <div class="container w-20 border p-5">
    <h2 class="text-center my-2">Current Schedules</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col" class="center"><a href="/schedules/day">Day</a></th>
                    <th scope="col" class="center">Start Time</th>
                    <th scope="col" class="center">End Time</th>
                    <th scope="col" class="center">Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each schedule}}
                    <tr>
                        <td scope="col" class="center">{{this.day}}</td>
                        <td scope="col" class="center">{{this.start_time}}</td>
                        <td scope="col" class="center">{{this.end_time}}</td>
                        <td scope="col" class="center">
                            <form method="POST" action="/schedules/{{this.schedule_id}}/delete?_method=DELETE">
                                <button type="submit" name="_method" class="btn btn-style">Delete</button>
                            </form>
                        </td>
                    </tr>

                {{/each}}
            </tbody>
        </table>
    </div>
</div>


