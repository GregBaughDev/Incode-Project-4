<div class="container w-75 center-div">
    <div class="container w-20 border p-5">
        <h2 class="text-center">Sign Up</h2>
        {{#if errors}}
            <h3>{{errors.userExists}}</h3>
        {{/if}}
        <form action="/signup" method="POST">
            <div class="form-group my-3">
                <label for="first">First Name</label>
                <input class="form-control" type="text" name="first" id="first" {{#if currData}} value="{{currData.first}}" {{/if}} required>
                {{#if errors}}
                    <span class="text-danger">{{errors.first}}</span>
                {{/if}}
            </div>
            <div class="form-group my-3">
                <label for="last">Last Name</label>
                <input class="form-control" type="text" name="last" id="last" {{#if currData}} value="{{currData.last}}" {{/if}} required>
                {{#if errors}}
                    <span class="text-danger">{{errors.last}}</span>
                {{/if}}
            </div>
            <div class="form-group my-3">
                <label for="email">Email Address</label>
                <input class="form-control" type="email" name="email" id="email" {{#if currData}} value="{{currData.email}}" {{/if}} required>
                {{#if errors}}
                    <span class="text-danger">{{errors.email}}</span>
                {{/if}}
            </div>
            <div class="form-group my-3">
                <label for="pword">Enter Password</label>
                <input class="form-control" type="password" name="pword" id="pword" required>
                {{#if errors}}
                    <span class="text-danger">{{errors.password}}</span>
                {{/if}}
            </div>
            <div class="form-group my-3">
                <label for="pwordcheck">Re-enter Password</label>
                <input class="form-control" type="password" name="pwordcheck" id="pwordcheck" required>
                {{#if errors}}
                    <span class="text-danger">{{errors.passwordMatch}}</span>
                {{/if}}
                <aside class="my-3">
                    <ul>
                        <li>Password must be at least 8 characters</li>
                        <li>Must contain at least 1 uppercase letter</li>
                        <li>Must contain at least 1 lowercase letter</li>
                        <li>Must contain at least 1 number</li>
                        <li>It may contain special characters</li>
                    </ul>
                </aside>
            </div>
            <div class="form-group my-3 d-flex justify-content-center">
                <button class="btn btn-style" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>