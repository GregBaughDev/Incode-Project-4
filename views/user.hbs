<div class="card mx-5">
    <div class="card-body">
        <section>
            <h2 class="card-title">Employee: {{userSearch.first_name}} {{userSearch.last_name}}</h2>
            <h3 class="card-subtitle mb-2 text-muted">User: {{userSearch.first_name}} {{userSearch.last_name}}</h3>
            <h4 class="card-subtitle mb-2 text-muted">Email: {{userSearch.email}}</h4>
        </section>
        <section class="my-3">
            <h2>Schedules:</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-center table-dark">Day</th>
                        <th class="text-center table-dark">Start Time</th>
                        <th class="text-center table-dark">End Time</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each schedSearch}}
                        <tr>
                            <td class="text-center table-light">{{this.day}}</td>
                            <td class="text-center table-light">{{this.start_time}}</td>
                            <td class="text-center table-light">{{this.end_time}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
    </div>
</div>